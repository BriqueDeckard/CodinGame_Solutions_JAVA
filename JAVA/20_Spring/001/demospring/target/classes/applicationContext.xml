<?xml version="1.0" encoding="UTF-8" ?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:aop="http://www.springframework.org/schema/aop"
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns:p="http://www.springframework.org/schema/p"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd 
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
>

    <!-- ANNOTATIONS POUR L'INJECTION DE DEPENDANCES -->
    <context:annotation-config />

    <!-- ANNOTATIONS POUR LA CREATION DE BEANS -->
    <context:component-scan base-package="main.java.edu.bd.notes" />

    <!-- ANNOTATIONS POUR AOP -->
    <aop:aspectj-autoproxy />

    <!-- GARDENER -->
    <bean
    id="gardener"
    class="main.java.edu.bd.notes.models.gardener.GardenerImpl"
    p:nom="Dupond"
  />


      <!--PLANTS -->
      <bean
    id="tomate"
    parent="plantImpl"
    scope="prototype"
    p:nomPlante="Tomate"
  />
      <bean
    id="patate"
    parent="plantImpl"
    scope="prototype"
    p:nomPlante="Patate"
  />
      <bean
    id="choux"
    parent="plantImpl"
    scope="prototype"
    p:nomPlante="Choux"
  />
      <bean
    id="pomme"
    parent="plantImpl"
    scope="prototype"
    p:nomPlante="Pomme"
  />
      <bean
    id="poire"
    parent="plantImpl"
    scope="prototype"
    p:nomPlante="Poire"
  />
      <bean
    id="poireMalade"
    parent="plantImpl"
    scope="prototype"
    p:nomPlante="PoireMalade"
  />
      <bean
    id="patateMalade"
    parent="plantImpl"
    scope="prototype"
    p:nomPlante="PatateMalade"
  />

  <!-- POTAGER -->
  <bean
    id="potager"
    class="main.java.edu.bd.notes.models.parcels.ParcelImpl"
    init-method="mix"
  >
  <property name="name" value="Potager" />
  <property name="plants">
      <list>
          <ref bean="tomate" />
          <ref bean="patate" />
          <ref bean="patateMalade" />
          <ref bean="choux" />
          <ref bean="choux" />
      </list>
  </property>
</bean>

<!-- VERGER -->
<bean
    id="verger"
    class="main.java.edu.bd.notes.models.parcels.ParcelImpl"
    init-method="mix"
  >
  <property name="name" value="Verger" />
  <property name="plants">
      <list>
          <ref bean="pomme" />
          <ref bean="poireMalade" />
          <ref bean="poire" />
      </list>
  </property>
</bean>

<!-- JARDIN -->
<bean
    id="jardin"
    class="main.java.edu.bd.notes.models.garden.GardenImpl"
    init-method="gardening"
  >
    <property name="gardener" ref="gardener" />
    <property name="parcels">
        <list>
            <ref bean="potager" />
            <ref bean="verger" />
        </list>
    </property>
    <!-- Les doses sont alÃ©atoires -->
    <property name="waterDose" value="#{ T(java.lang.Math).random() * 100 }" />
    <property
      name="fertilizerDose"
      value="#{ T(java.lang.Math).random() * 50 }"
    />
</bean>

    </beans>
